<div class="view-container uk-section uk-flex">
  <div class="uk-container">
    <div class="uk-card uk-card-body uk-box-shadow-large uk-text-center">
      <form method="POST">

        <h2>Enter your email</h2>

        <div class="uk-margin">
          <div class="uk-inline">
            <span class="uk-form-icon" uk-icon="icon: mail"></span>
            <input class="uk-input" type="email" placeholder="email" name="email" required>
          </div>
        </div>

        {{#if err}}
        <div class="uk-alert-danger uk-margin-auto" uk-alert>
          <p>{{err}}</p>
        </div>
        {{/if}}

        <button class="uk-button uk-button-primary" type="submit">recover password</button>

      </form>
    </div>
  </div>
</div>
